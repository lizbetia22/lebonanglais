{% extends "base.html.twig" %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded shadow-md w-96">
            <h1 class="text-3xl font-bold underline text-orange-600 mb-6 text-center">Login to Leboangle</h1>

            <!-- Display errors near the title -->
            {% if error %}
                <h2 class="text-red-500 mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</h2>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-4">
                    <label for="username" class="block text-gray-700">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="w-full border border-gray-300 rounded px-3 py-2">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-700">Password:</label>
                    <input type="password" id="password" name="_password" class="w-full border border-gray-300 rounded px-3 py-2">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Login</button>
            </form>

            <p class="mt-4 text-center">
                <a href="{{ path('app_home') }}" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue">
                   Back
                </a>
            </p>
        </div>
    </div>
{% endblock %}
