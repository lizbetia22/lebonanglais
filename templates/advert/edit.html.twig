{% extends 'base.html.twig' %}

{% block title %}Edit Advert{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Edit Advert</h1>

    <div class="bg-white rounded shadow-md p-6">
        {% if form_errors(form) %}
            <div class="alert alert-danger text-red-500">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'mt-8'}}) }}

        <div class="mb-4">
            {{ form_row(form.state, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2'}}) }}
        </div>

        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Save
        </button>

        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_advert_index') }}" class="block mt-4 text-blue-500 hover:text-blue-600">Back to list</a>
{% endblock %}
