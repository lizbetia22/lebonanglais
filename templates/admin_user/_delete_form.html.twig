<form method="post" action="{{ path('app_admin_user_delete', {'id': admin_user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin_user.id) }}">
    <button type="submit" class="bg-red-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-red-600">
        Delete
    </button>
</form>
