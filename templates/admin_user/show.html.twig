{% extends 'base.html.twig' %}

{% block title %}AdminUser{% endblock %}

{% block body %}
    <div class="py-8 px-4">
        <h1 class="text-2xl font-bold mb-4">AdminUser</h1>

        <table class="border-collapse border rounded-lg">
            <tbody>
            <tr>
                <th class="border border-gray-300 px-4 py-2">Id</th>
                <td class="border border-gray-300 px-4 py-2">{{ admin_user.id }}</td>
            </tr>
            <tr>
                <th class="border border-gray-300 px-4 py-2">Email</th>
                <td class="border border-gray-300 px-4 py-2">{{ admin_user.email }}</td>
            </tr>
            <tr>
                <th class="border border-gray-300 px-4 py-2">Username</th>
                <td class="border border-gray-300 px-4 py-2">{{ admin_user.username }}</td>
            </tr>
            <tr>
                <th class="border border-gray-300 px-4 py-2">Roles</th>
                <td class="border border-gray-300 px-4 py-2">{{ admin_user.roles ? admin_user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th class="border border-gray-300 px-4 py-2">Password</th>
                <td class="border border-gray-300 px-4 py-2">{{ admin_user.password }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_admin_user_index') }}" class="inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-blue-600 hover:text-white hover:underline mr-4">
                Back to List
            </a>
            <a href="{{ path('app_admin_user_edit', {'id': admin_user.id}) }}" class="inline-block bg-gray-200 text-blue-500 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-gray-300 hover:text-blue-700 hover:underline ml-4 mb-4">
                Edit
            </a>
        </div>

        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
